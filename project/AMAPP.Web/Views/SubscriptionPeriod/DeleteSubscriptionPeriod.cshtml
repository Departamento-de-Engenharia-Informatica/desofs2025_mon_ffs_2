@model AMAPP.Web.Models.SubscriptionPeriod

@{
    ViewData["Title"] = "Excluir Período de Subscrição";
}

<div class="container mt-5">
    <h1 class="title">Excluir Período de Subscrição</h1>
    <div class="alert alert-warning" role="alert">
        Tem certeza de que deseja excluir o período de subscrição <strong>@Model.Name</strong>?
    </div>
    <div class="d-flex justify-content-end mt-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Excluir
            </button>
            <a asp-action="List" class="btn btn-secondary">
                <i class="bi bi-x-circle-fill"></i> Cancelar
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                alert('@Html.Raw(TempData["ErrorMessage"])');
            </text>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                alert('@Html.Raw(TempData["SuccessMessage"])');
            </text>
        }
    </script>
}