@model IEnumerable<AMAPP.Web.Models.SubscriptionPeriod>
<link rel="stylesheet" href="~/css/subscriptionperiod.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Subscription Period List";
}

<div class="container mt-5">
    <h1 class="title">Subscription Periods</h1>

    <div class="header">
        <p class="subtitle">Manage your subscription periods below.</p>
        <a asp-action="Create" class="btn btn-create">
            <i class="bi bi-plus-circle-fill"></i> Create New Subscription Period
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table subscription-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var period in Model)
                    {
                        <tr>
                            <td>@period.Name</td>
                            <td>@period.StartDate.ToString("yyyy-MM-dd")</td>
                            <td>@period.EndDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@period.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@period.Id" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this subscription period?');">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert no-data-alert">
            <i class="bi bi-exclamation-circle"></i> No subscription periods found.
        </div>
    }
</div>
