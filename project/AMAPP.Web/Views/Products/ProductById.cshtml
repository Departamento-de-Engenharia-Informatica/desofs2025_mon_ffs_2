@model AMAPP.Web.Models.Product
<link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5" style="margin-bottom:100px;">
    <h2 class="text-center mb-4">Product Details</h2>

    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.PhotoBase64))
            {
                <img src="@Model.PhotoBase64" class="img-fluid rounded" alt="@Model.Name" />
            }
            else
            {
                <img src="~/images/default-product.png" class="img-fluid rounded" alt="Default Product" />
            }
        </div>

        <div class="col-md-8">
            <h3>@Model.Name</h3>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price:</strong> €@Model.ReferencePrice</p>
            <p><strong>Delivery Unit:</strong> @Model.DeliveryUnit</p>
            <p><strong>Product Type ID:</strong> @Model.ProductTypeId</p>
        </div>
    </div>

    <div class="text-end mt-4">
        <a class="btn btn-secondary" asp-action="List">Back to List</a>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
    </div>
</div>

