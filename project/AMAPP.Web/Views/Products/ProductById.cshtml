@model AMAPP.Web.Models.Product
<link rel="stylesheet" href="~/css/subscriptionperiod.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container mt-5" style="margin-bottom:100px;">
    <h1 class="text-center mb-4">Detalhes do Produto</h1>

    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.PhotoBase64))
            {
                <img src="@Model.PhotoBase64" class="img-fluid rounded" alt="@Model.Name" />
            }
            else
            {
                <img src="~/images/default-product.png" class="img-fluid rounded" alt="Produto Padrão" />
            }
        </div>

        <div class="col-md-8">
            <h3>@Model.Name</h3>
            <p><strong>Descrição:</strong> @Model.Description</p>
            <p><strong>Preço:</strong> €@Model.ReferencePrice</p>
            <p><strong>Unidade de Entrega:</strong> @Model.DeliveryUnit</p>
            <p><strong>ID do Tipo de Produto:</strong> @Model.ProductTypeId</p>
        </div>
    </div>

    <div class="text-end mt-4">
        <a class="btn btn-secondary" asp-action="List">Voltar à Lista</a>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Tem certeza de que deseja eliminar este produto?');">Eliminar</a>
    </div>
</div>
