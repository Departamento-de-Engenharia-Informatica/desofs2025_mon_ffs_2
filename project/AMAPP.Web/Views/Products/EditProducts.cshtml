@model AMAPP.Web.Models.Product
<link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <h1 class="title">Edit Product</h1>

    <div class="form-container">
        <form asp-action="Edit" method="post" class="form-edit" enctype="multipart/form-data">
            <div class="row">
                <!-- Primeira coluna -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ReferencePrice" class="form-label">Reference Price</label>
                        <input asp-for="ReferencePrice" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="ReferencePrice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Segunda coluna -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Photo" class="form-label">Upload New Photo</label>
                        <input type="file" name="Photo" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="DeliveryUnit" class="form-label">Delivery Unit</label>
                        <input asp-for="DeliveryUnit" class="form-control" placeholder="e.g., kg, liter" />
                        <span asp-validation-for="DeliveryUnit" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProductTypeId" class="form-label">Product Type</label>
                        <select asp-for="ProductTypeId" class="form-control">
                            <option value="">Select Product Type</option>
                            <option value="0">Type 0</option>
                            <option value="1">Type 1</option>
                            <option value="2">Type 2</option>
                        </select>
                        <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-save">Save Changes</button>
            </div>
        </form>
    </div>
</div>
