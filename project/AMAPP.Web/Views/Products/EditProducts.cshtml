@model AMAPP.Web.Models.Product
<link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Editar Produto</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nome do Produto</label>
                    <input asp-for="Name" class="form-control" required placeholder="Insira o nome do produto" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReferencePrice" class="form-label">Preço de Referência (€)</label>
                    <input asp-for="ReferencePrice" class="form-control" type="number" step="0.01" required placeholder="Insira o preço de referência" />
                    <span asp-validation-for="ReferencePrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Descrição</label>
                    <textarea asp-for="Description" class="form-control" required placeholder="Insira uma descrição"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Photo" class="form-label">Carregar Nova Foto</label>
                    <input type="file" name="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DeliveryUnit" class="form-label">Unidade de Entrega</label>
                    <select asp-for="DeliveryUnit" class="form-control" required>
                        <option value="">Selecione a unidade do produto</option>
                        <option value="0">Unidade</option>
                        <option value="1">Kg</option>
                        <option value="2">Gramas</option>
                        <option value="3">Litros</option>
                    </select>
                    <span asp-validation-for="DeliveryUnit" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductTypeId" class="form-label">Tipo de Produto</label>
                    <select asp-for="ProductTypeId" class="form-control" required>
                        <option value="">Selecione o tipo de produto</option>
                        <option value="1">Simples</option>
                        <option value="2">Composto</option>
                    </select>
                    <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-check-circle-fill"></i> Guardar Alterações
                    </button>
                    <a asp-action="List" class="btn btn-secondary">
                        <i class="bi bi-x-circle-fill"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
