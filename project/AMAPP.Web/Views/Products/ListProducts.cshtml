@model IEnumerable<AMAPP.Web.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5" style="margin-bottom:100px;">
    <h2 class="text-center mb-4">List of Products</h2>

    <div class="text-end mb-3">
        <a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Create">Add New Product</a>
    </div>

    <!-- Layout de cards -->
    <div class="row row-cols-1 row-cols-md-5 g-6">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="~/images/Products/@product.Photo" class="card-img-top" alt="@product.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>Price:</strong> €@product.ReferencePrice</p>
                        <p class="card-text"><strong>Delivery Unit:</strong> @product.DeliveryUnit</p>
                        <p class="card-text"><strong>Product Type ID:</strong> @product.ProductTypeId</p>
                    </div>
                    <div class="card-footer text-end">
                        <!-- Botões de Editar e Apagar -->
                        <a class="btn btn-warning btn-sm" asp-area="" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<!-- Optional: Incluir o JS do Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
