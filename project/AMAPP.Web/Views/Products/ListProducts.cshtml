@model IEnumerable<AMAPP.Web.Models.Product>
<link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5" style="margin-bottom:100px;">
    <h2 class="text-center mb-4">List of Products</h2>

    <div class="text-end mb-3">
        <a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Create">Add New Product</a>
    </div>

    <!-- Layout de cards -->
    <div class="row row-cols-1 row-cols-md-5 g-6">
        @foreach (var product in Model)
        {
            <a class="card-link" asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                <div class="col">
                    <div class="card h-100 hover-card">
                        <img src="@product.PhotoBase64" class="card-img-top" alt="@product.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><strong>Price:</strong> €@product.ReferencePrice</p>
                            <p class="card-text"><strong>Delivery Unit:</strong> @product.DeliveryUnit</p>
                            <p class="card-text"><strong>Product Type ID:</strong> @product.ProductTypeId</p>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>

</div>

<!-- Optional: Incluir o JS do Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
