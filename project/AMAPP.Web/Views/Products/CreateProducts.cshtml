@model AMAPP.Web.Models.Product
<link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create a New Product</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <div class="row">
        <!-- Primeira coluna -->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReferencePrice" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">€</span>
                    <input asp-for="ReferencePrice" class="form-control" type="number" step="0.01" />
                </div>
                <span asp-validation-for="ReferencePrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <!-- Segunda coluna -->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Photo" class="form-label"></label>
                <input type="file" name="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="DeliveryUnit" class="form-label"></label>
                <input asp-for="DeliveryUnit" class="form-control" placeholder="Digite a unidade de entrega (por exemplo, kg, litro, etc.)" />
                <span asp-validation-for="DeliveryUnit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductTypeId" class="form-label"></label>
                <select asp-for="ProductTypeId" class="form-control">
                    <option value="">Selecione o tipo de produto</option>
                    <!-- Adicionar aqui as opções de tipos de produto -->
                    <option value="0">Tipo 0</option>
                    <option value="1">Tipo 1</option>
                    <option value="2">Tipo 2</option>
                    @* Para implementar mais tarde: @foreach (var type in ViewBag.ProductTypes) {
                    <option value="@type.Id">@type.Name</option>
                    }*@
                </select>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
</form>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.0/jquery.validate.unobtrusive.min.js"></script>
}
