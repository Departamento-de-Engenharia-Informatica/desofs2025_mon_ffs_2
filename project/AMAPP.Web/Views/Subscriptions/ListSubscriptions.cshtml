@model IEnumerable<AMAPP.Web.Models.Subscription>
<link rel="stylesheet" href="~/css/subscriptionperiod.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Lista de Subscrições";
}

<div class="container mt-5">
    <h1 class="title">@ViewData["Title"]</h1>

    <div class="header">
        <p class="subtitle">Gerencie as subscrições abaixo.</p>
        <a asp-action="Create" class="btn btn-create">
            <i class="bi bi-plus-circle-fill"></i> Criar Nova Subscrição
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table subscription-table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Coprodutor</th>
                        <th>Período</th>
                        <th>Produtos</th>
                        <th>Total de Pagamentos (€)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subscription in Model)
                    {
                        <tr>
                            <td>@subscription.Id</td>
                            <td>@subscription.CoproducerName</td>
                            <td>@subscription.PeriodDescription</td>
                            <td>
                                <ul class="dates-list">
                                    @foreach (var product in subscription.Products)
                                    {
                                        <li><i class="bi bi-box date-icon"></i>@product</li>
                                    }
                                </ul>
                            </td>
                            <td>@subscription.TotalPayments.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert no-data-alert">
            <i class="bi bi-exclamation-circle"></i> Nenhuma subscrição encontrada.
        </div>
    }
</div>
