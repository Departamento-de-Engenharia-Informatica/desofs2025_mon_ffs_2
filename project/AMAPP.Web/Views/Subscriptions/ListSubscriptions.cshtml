@model IEnumerable<AMAPP.Web.Models.SubscriptionViewModel>
<link rel="stylesheet" href="~/css/subscriptionperiod.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Lista de Subscrições";
}

<div class="container mt-5">
    <h1 class="title">Lista de Subscrições</h1>

    <div class="header">
        <p class="subtitle"></p>
        <a asp-action="Create" class="btn btn-create">
            <i class="bi bi-plus-circle-fill"></i> Criar Nova Subscrição
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table subscription-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Data de Entrega</th>
                        <th>Oferta do Produto</th>
                        <th>ID da Subscrição</th>
                        <th>Quantidade</th>
                        <th>Pagamentos</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subscription in Model)
                    {
                        <tr>
                            <td>@subscription.Id</td>
                            <td>@subscription.DeliveryDate.ToString("yyyy-MM-dd")</td>
                            <td>@subscription.ProductOfferId</td>
                            <td>@subscription.SubscriptionId</td>
                            <td>@subscription.Quantity</td>
                            <td>
                                @if (subscription.Payments != null && subscription.Payments.Any())
                                {
                                    <ul>
                                        @foreach (var payment in subscription.Payments)
                                        {
                                            <li>@payment.Amount € - @payment.PaymentDate.ToString("yyyy-MM-dd")</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p>Sem pagamentos</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert no-data-alert">
            <i class="bi bi-exclamation-circle"></i> Nenhuma subscrição encontrada.
        </div>
    }
</div>
