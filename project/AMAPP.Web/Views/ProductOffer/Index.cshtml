@model List<ProductOffer>
<link rel="stylesheet" href="~/css/productoffer.css" asp-append-version="true" />

<div class="container">
    <h1 class="title">Ofertas de Produtos</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="no-data-alert">
            Não existem ofertas de produtos disponíveis no momento.
        </div>
    }
    else
    {
        <table class="subscription-table">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Período de Assinatura</th>
                    <th>Datas de Entrega</th>
                    <th>Método de Pagamento</th>
                    <th>Modo de Pagamento</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model)
                {
                    <tr>
                        <td>@offer.ProductName</td>
                        <td>@offer.SubscriptionPeriodName</td>
                        <td>@string.Join(", ", offer.SelectedDeliveryDates)</td>
                        <td>@offer.PaymentMethod</td>
                        <td>@offer.PaymentMode</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@offer.Id" class="btn btn-warning btn-sm">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-action="Create" class="btn btn-create">Criar Nova Oferta</a>
</div>
